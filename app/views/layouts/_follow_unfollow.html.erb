<% if current_user.following?(user) %>
  <%# FIXIT: not posting changes %>
  <%= form_with(url: follow_requests_path, method: :delete) do |form| %>
    <%= form.hidden_field :recipient_id, value: user.id %>
    <%= form.submit "Unfollow" %>
  <% end %>
<% else %>
  <%# FIXIT: not posting changes %>
  <%= form_with(url: follow_requests_path, method: :post) do |form| %>
    <%= form.hidden_field :sender_id, value: current_user.id %>
    <%= form.submit "Follow" %>
  <% end %>
<% end %>
